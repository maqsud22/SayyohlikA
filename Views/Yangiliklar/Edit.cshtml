@model SayyohlikA.Models.Yangiliklar
@{
    ViewData["Title"] = "Yangilikni Tahrirlash";
}

<h2>Yangilikni Tahrirlash</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-2">
        <label asp-for="Sarlavxa" class="control-label"></label>
        <input asp-for="Sarlavxa" class="form-control" />
        <span asp-validation-for="Sarlavxa" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="Content" class="control-label"></label>
        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="PublishedDate" class="control-label">Chop etilgan sana</label>
        <input asp-for="PublishedDate" type="date" class="form-control" />
        <span asp-validation-for="PublishedDate" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Saqlash</button>
    <a asp-action="Index" class="btn btn-secondary">Orqaga</a>
</form>
