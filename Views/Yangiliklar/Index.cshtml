        <tr>
            <th>Sarlavha</th>
            <th>Chop etilgan</th>
            <th>Amallar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Sarlavxa</td>
                <td>@item.PublishedDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Tahrirlash</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">O'chirish</a>
                </td>
            </tr>
        }
    </tbody>
</table>
