@model IEnumerable<SayyohlikA.Models.Yangiliklar>
@{
    ViewData["Title"] = "Yangiliklar";
}

<h2>Yangiliklar</h2>
<a asp-action="Create" class="btn btn-primary mb-2">Yangi Yangilik Qoâ€˜shish</a>

<table class="table table-bordered">
