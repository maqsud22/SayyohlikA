@model SayyohlikA.Models.Shahar
@{
    ViewData["Title"] = "Shaharni Tahrirlash";
    var davlatlar = ViewBag.Davlatlar as List<SayyohlikA.Models.Davlat> ?? new List<SayyohlikA.Models.Davlat>();
}

<h2>Shaharni Tahrirlash</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group mb-2">
        <label asp-for="Nomi" class="control-label"></label>
        <input asp-for="Nomi" class="form-control" />
        <span asp-validation-for="Nomi" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="MamlakatId" class="control-label">Davlat</label>
        <select asp-for="MamlakatId" class="form-control">
            <option value="">Davlatni tanlang</option>
            @foreach (var davlat in davlatlar)
            {
                <option value="@davlat.Id" selected="@(davlat.Id == Model.MamlakatId)">@davlat.Nomi</option>
            }
        </select>
        <span asp-validation-for="MamlakatId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Saqlash</button>
    <a asp-action="Index" class="btn btn-secondary">Orqaga</a>
</form>
