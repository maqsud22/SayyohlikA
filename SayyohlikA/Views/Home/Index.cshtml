@{
    ViewData["Title"] = "Sayohat Agentligi";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">

    <!-- Hero Banner -->
    <div class="p-5 mb-4 bg-light rounded-3 shadow">
        <div class="container-fluid py-5 text-center">
            <h1 class="display-5 fw-bold">Orzuyingizdagi sayohatni biz bilan boshlang!</h1>
            <p class="col-md-8 fs-4 mx-auto">Eng mashhur yo‘nalishlar, qulay narxlar va qulay xizmatlar sizni kutmoqda.</p>
            <a href="/Xaridorlar/AddXaridor" class="btn btn-primary btn-lg">Sayohatga yoziling</a>
        </div>
    </div>

    <!-- Sayohat Yo'nalishlari -->
    <h2 class="text-center mb-4">Mashhur yo‘nalishlar</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
            <div class="card h-100 shadow">
                <img src="https://source.unsplash.com/600x400/?paris,travel" class="card-img-top" alt="Paris">
                <div class="card-body">
                    <h5 class="card-title">Parij</h5>
                    <p class="card-text">Sevgi shahri va Eyfel minorasi bilan unutilmas dam olish!</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow">
                <img src="https://source.unsplash.com/600x400/?dubai,travel" class="card-img-top" alt="Dubai">
                <div class="card-body">
                    <h5 class="card-title">Dubay</h5>
                    <p class="card-text">Zamonaviy hayot va cho‘lning go‘zalligi uyg‘unlashgan manzil.</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow">
                <img src="https://source.unsplash.com/600x400/?maldives,beach" class="card-img-top" alt="Maldives">
                <div class="card-body">
                    <h5 class="card-title">Maldiv orollari</h5>
                    <p class="card-text">Oq qum, toza dengiz va sokinlikni istasangiz, aynan shu yerga boring.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Biz haqimizda -->
    <div class="mt-5 p-4 bg-white rounded shadow">
        <h3>Biz haqimizda</h3>
        <p>Sayohat Agentligimiz 2010-yildan buyon mijozlarga eng yaxshi xizmat ko‘rsatib kelmoqda. Maqsadimiz – orzularingizdagi sayohatni ro‘yobga chiqarish.</p>
    </div>
</div>